{
  "name": "hangman-api",
  "version": "0.0.1",
  "description": "API for Hangman Game",
  "author": "Dante Calderon<mail@dantecalderon.dev>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nodemon",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest  --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "6.11.0",
    "@nestjs/core": "6.11.0",
    "@nestjs/graphql": "6.4.2",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-fastify": "^6.10.11",
    "@nestjs/swagger": "^4.0.9",
    "@typegoose/typegoose": "^6.3.2",
    "apollo-server-fastify": "^2.9.14",
    "automapper-nartc": "^3.0.19",
    "bluebird": "3.5.5",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "class-transformer": "0.2.3",
    "class-validator": "0.10.0",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "fastify-swagger": "^2.5.0",
    "graphql": "14.5.0",
    "graphql-objectid-scalar": "^0.1.3",
    "graphql-tools": "4.0.5",
    "graphql-type-json": "^0.3.1",
    "helmet": "3.21.2",
    "mongoose": "5.8.11",
    "nestjs-typegoose": "^7.1.0",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.2",
    "slugify": "^1.3.5"
  },
  "devDependencies": {
    "@nestjs/testing": "6.6.5",
    "@types/faker": "^4.1.9",
    "@types/jest": "24.0.18",
    "@types/mongoose": "5.5.22",
    "@types/node": "12.11.2",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.8",
    "concurrently": "4.1.2",
    "jest": "24.9.0",
    "nodemon": "1.19.2",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "typescript": "3.5.3",
    "wait-on": "3.3.0"
  },
  "resolutions": {
    "graphql": "14.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
